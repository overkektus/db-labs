<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ped.bstu.by.sqlite1.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            style="@style/TextView"
            android:id="@+id/textViewId"
            android:text="@string/id" />

        <EditText
            android:id="@+id/editTextId"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"/>

        <TextView
            style="@style/TextView"
            android:id="@+id/textViewF"
            android:text="@string/f" />

        <EditText
            android:id="@+id/editTextF"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            style="@style/TextView"
            android:id="@+id/textViewT"
            android:text="@string/t" />

        <EditText
            android:id="@+id/editTextT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:onClick="Insert"
            style="@style/WidthHeight"
            android:id="@+id/buttonInsert"
            android:text="@string/insert" />

        <Button
            android:onClick="Select"
            style="@style/WidthHeight"
            android:id="@+id/buttonSelect"
            android:text="@string/select" />

        <Button
            android:onClick="SelectRaw"
            style="@style/WidthHeight"
            android:id="@+id/buttonSelectRaw"
            android:text="@string/select_raw" />

        <Button
            android:onClick="Update"
            style="@style/WidthHeight"
            android:id="@+id/buttonUpdate"
            android:text="@string/update" />

        <Button
            android:onClick="Delete"
            style="@style/WidthHeight"
            android:id="@+id/buttonDelete"
            android:text="@string/delete" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
