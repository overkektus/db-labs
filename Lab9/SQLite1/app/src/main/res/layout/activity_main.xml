<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ped.bstu.by.sqlite1.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            style="@style/TextView"
            android:id="@+id/textViewId"
            android:text="ID" />

        <EditText
            android:id="@+id/editTextId"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"/>

        <TextView
            style="@style/TextView"
            android:id="@+id/textViewF"
            android:text="F" />

        <EditText
            android:id="@+id/editTextF"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            style="@style/TextView"
            android:id="@+id/textViewT"
            android:text="T" />

        <EditText
            android:id="@+id/editTextT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            style="@style/WidthHeight"
            android:id="@+id/buttonInsert"
            android:text="INSERT" />

        <Button
            style="@style/WidthHeight"
            android:id="@+id/buttonSelect"
            android:text="SELECT" />

        <Button
            style="@style/WidthHeight"
            android:id="@+id/buttonSelectRaw"
            android:text="SelectRaw" />

        <Button
            style="@style/WidthHeight"
            android:id="@+id/buttonUpdate"
            android:text="UPDATE" />

        <Button
            style="@style/WidthHeight"
            android:id="@+id/buttonDelete"
            android:text="DELETE" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
